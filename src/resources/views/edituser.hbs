{{#if query}}
<form class="mt-4" method="POST" >
  <div class="row mb-3">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Tên tài khoản</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputAccount3" name="account" value="{{#each query}}{{this.Account}}{{/each}}" required>
    </div>
  </div>
  <div class="row mb-3">
    <label for="inputPassword3" class="col-sm-2 col-form-label">Mật khẩu</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputPassword3" name="password" value="{{#each query}}{{this.Password}}{{/each}}" required>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Cập nhật tài khoản</button>
</form>
{{/if}}