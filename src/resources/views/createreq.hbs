              var date = new Date($('#inputdate').val());
              var day = $('#inputdate').getDate();
              var month = $('#inputdate').getMonth() + 1;
              var year = $('#inputdate').getFullYear();
              var realdate = null;
              realdate = day +"/" + month +"/" + year;
              return realdate;
