<form class="mt-4" method="POST" >
  <div class="row mb-3">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Tên yêu cầu</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputAccount3" name="reqname" placeholder="Tên yêu cầu  " required>
    </div>
  </div>
  <div class="row mb-3">
    <label for="inputPassword3" class="col-sm-2 col-form-label">Mức lương</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputPassword3" name="salary" placeholder="Mức lương" required>
    </div>
  </div>
  <div class="row mb-3">
    <label for="inputDepart" class="col-sm-2 col-form-label">Tên phòng ban</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputDepart" name="departname" placeholder="Tên phòng ban" required>
    </div>
  </div>
  <div class="row mb-3">
    <label for="inputDate" class="col-sm-2 col-form-label">Ngày bắt đầu nhận hồ sơ</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputdate" name="startdate" placeholder="" onfocus="(this.type='date')" required>
    </div>
  </div>
   <div class="row mb-3">
    <label for="inputDate" class="col-sm-2 col-form-label">Hạn cuối nhận hồ sơ</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputdate" name="deadline" placeholder="" onfocus="(this.type='date')" required>
    </div>
  </div>
   <div class="row mb-3">
        <label for="jobtype-input" class="col-sm-2 col-form-label">Loại công việc</label>
        <div class="col-sm-10">
        <select class="form-control" id="jobtype" name="jobtype">
            <option value="">--Chọn loại công việc--</option>
            <option value="Full-time">Full-time</option>
            <option value="Part-time">Part-time</option>
            <option value="Thực tập sinh">Thực tập sinh</option>
        </select>
        </div>
    </div>
  <div class="row mb-3">
        <label for="inputjobdetail" class="col-sm-2 col-form-label">Mô tả công việc</label>
        <div class="col-sm-10">
          <textarea id="mytextarea" name="jobdetail">Hello, World!</textarea>
        </div>
  </div>
