<link rel="stylesheet" href="/css/linearicons.css">
<link rel="stylesheet" href="/css/font-awesome.min.css">
{{!-- <link rel="stylesheet" href="css/bootstrap.css"> --}}
<link rel="stylesheet" href="/css/magnific-popup.css">
<link rel="stylesheet" href="/css/nice-select.css">					
<link rel="stylesheet" href="/css/animate.min.css">
<link rel="stylesheet" href="/css/owl.carousel.css">
<link rel="stylesheet" href="/css/main.css">
{{#if message}}
  <div class="alert alert-{{message.type}}" role="alert">
    {{message.message}}
</div>
{{/if}}
<section class="post-area section-gap">
	<div class="container">
		<div class="row justify-content-center d-flex">
			<div class="col-lg-8 post-list">
				{{#each query}}
				<div class="single-post d-flex flex-row">
					<div class="thumb">
					</div>
					<div class="details">
						<div class="title d-flex flex-row justify-content-between">
							<div class="titles">
								<a href=""><h4>{{this.ReqName}}</h4></a>	
							</div>
						</div>
						<h5>Loại công việc: {{this.JobType}}</h5>
						<h5>Phòng ban: {{this.DepartName}}</h5>
						<p class="address"><i class="fas fa-search-location"></i> Văn phòng Hà Nội, Tầng 2, tòa nhà Ecolife Capital, 58 Tố Hữu, Trung Văn, Nam Từ Liêm, Hà Nội</p>
						<p class="address"><i class="fas fa-clock"></i> Thời gian nhận hồ sơ: {{this.StartDate}} đến {{this.Deadline}}</p>
						<p class="address"><i class="fas fa-dollar-sign"></i> Mức lương: {{this.Salary}} </p>
					</div>
				</div>
				<div class="single-post job-details">
					<h4 class="single-title">Chi tiết công việc</h4>
					<p>
						{{{this.JD}}}
					</p>
				</div>
				<div class="single-post job-experience">
					<h4 class="single-title">Nộp đơn ứng tuyển công việc này</h4>
					<form action="" class="mt-4" method="POST" enctype='multipart/form-data'>
  						<div class="row mb-3">
    					<label for="inputEmail3" class="col-sm-2 col-form-label">Họ & tên</label>
    						<div class="col-sm-10">
      							<input type="text" class="form-control" id="inputAccount3" name="name" placeholder="Họ và tên" required>
    						</div>
  						</div>
  						<div class="row mb-3">
    					<label for="inputPassword3" class="col-sm-2 col-form-label">Địa chỉ email</label>
    						<div class="col-sm-10">
      							<input type="text" class="form-control" id="inputPassword3" name="email" placeholder="Địa chỉ email" required>
    						</div>
  						</div>
						<div class="row mb-3">
						<label for="inputPassword3" class="col-sm-2 col-form-label">Số điện thoại</label>
							<div class="col-sm-10">
								<input type="text" class="form-control" id="inputPassword3" name="phone" placeholder="Số điện thoại" required>
							</div>
						</div>
						<div class="mb-3">
							<label for="formFile" class="form-label">CV của bạn</label>
							<input class="form-control" type="file" id="formFile" name="cvfile">
						</div>
						<input type="hidden" id="date" name="submitdate" value="" />
						<div class="g-recaptcha" data-sitekey="6LcnT6geAAAAAHDZNccqgKauQTbxQq-pBYHMK4Ez"></div>
						<button type="submit" class="btn btn-primary" onclick="document.getElementById('date').value = new Date().toLocaleString('en-GB')" id="submit">Nộp đơn ứng tuyển</button>
					</form>
				</div>
				{{/each}}						
			</div>
			<div class="col-lg-4 sidebar">
				<div class="single-slidebar">
				<h4>Loại công việc</h4>
					<ul class="cat-list">
						<li><a class="justify-content-between d-flex" href="/showhiring"><p>Tất cả</p><span>{{#each countall}}{{this.Count}}{{/each}}</span></a></li>
						<li><a class="justify-content-between d-flex" href="/showhiring/Full-time"><p>Full-time</p><span>{{#each countFull}}{{this.Count}}{{/each}}</span></a></li>
						<li><a class="justify-content-between d-flex" href="/showhiring/Part-time"><p>Part-time</p><span>{{#each countPart}}{{this.Count}}{{/each}}</span></a></li>
						<li><a class="justify-content-between d-flex" href="/showhiring/Thực tập sinh"><p>Thực tập sinh</p><span>{{#each countIntern}}{{this.Count}}{{/each}}</span></a></li>
					</ul>
				</div>
				<div class="single-slidebar">
				<h4>Phòng ban</h4>
					<ul class="cat-list">
								<li><a class="justify-content-between d-flex" href="/showhiring"><p>Tất cả</p></a></li>
							{{#each departsort}}
								<li><a class="justify-content-between d-flex" href="/showhiring/{{this.DepartName}}"><p>{{this.DepartName}}</p></a></li>
							{{/each}}
					</ul>
				</div>
				<div class="single-slidebar">
				<h4>Tìm kiếm</h4>
					<form class="d-flex" method="post">
        				<input class="form-control me-2" type="Search" placeholder="Tìm kiếm" name="titlesearch" aria-label="Search">
        				<button class="btn btn-outline-success" type="submit">Tìm kiếm</button>
     				 </form>
				</div>
			</div>
		</div>
	</div>
</section>
