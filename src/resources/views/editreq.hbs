{{#if query}}
<script>
      tinymce.init({
        selector: '#mytextarea'
      });
</script>
<form class="mt-4" method="POST" >
  <div class="row mb-3">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Tên yêu cầu</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputAccount3" name="reqname" value="{{#each query}}{{this.ReqName}}{{/each}}" placeholder="Tên yêu cầu" required>
    </div>
  </div>
  <div class="row mb-3">
    <label for="inputPassword3" class="col-sm-2 col-form-label">Mức lương</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputPassword3" name="salary" value="{{#each query}}{{this.Salary}}{{/each}}" placeholder="Mức lương" required>
    </div>
  </div>
  <div class="row mb-3">
    <label for="inputDepart" class="col-sm-2 col-form-label">Tên phòng ban</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputDepart" name="departname" value="{{#each query}}{{this.DepartName}}{{/each}}" placeholder="Tên phòng ban" required>
    </div>
  </div>
  <div class="row mb-3">
    <label for="inputDate" class="col-sm-2 col-form-label">Ngày bắt đầu nhận hồ sơ</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputdate" name="startdate" placeholder="01/25/2022" onfocus="(this.type='date')" value="{{#each query}}{{this.StartDate}}{{/each}}"required>
    </div>
  </div>
   <div class="row mb-3">
    <label for="inputDate" class="col-sm-2 col-form-label">Hạn cuối nhận hồ sơ</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputdate" name="deadline" placeholder="01/25/2022" onfocus="(this.type='date')" value="{{#each query}}{{this.Deadline}}{{/each}}"required>
    </div>
  </div>
   <div class="row mb-3">
        <label for="jobtype-input" class="col-sm-2 col-form-label">Loại công việc</label>
        <div class="col-sm-10">
        <select class="form-control" id="jobtype" name="jobtype">
            {{!-- <option value="" placeholder="{{#each query}}{{this.JobType}}{{/each}}"></option> --}}
            <option value="{{#each query}}{{this.JobType}}{{/each}}"hidden>{{#each query}}{{this.JobType}}{{/each}}</option>
            <option value="Full-time">Full-time</option>
            <option value="Part-time">Part-time</option>
            <option value="Thực tập sinh">Thực tập sinh</option>
        </select>
        </div>
    </div>
  <div class="row mb-3">
        <label for="inputjobdetail" class="col-sm-2 col-form-label">Mô tả công việc</label>
        <div class="col-sm-10">
          <textarea id="mytextarea" name="jobdetail">{{#each query}}{{{this.JD}}}{{/each}}</textarea>
        </div>
  </div>
  {{!-- <div class="row mb-3">
        <label for="statustype-input" class="col-sm-2 col-form-label">Trạng thái yêu cầu tuyển dụng</label>
        <div class="col-sm-10">
        <select class="form-control" id="statustype" name="statustype">
            <option value="{{#each query}}{{this.Status}}{{/each}}" hidden>{{#each query}}{{this.Status}}{{/each}}</option>
            <option value="Đang nhận hồ sơ">Đang nhận hồ sơ</option>
            <option value="Chuẩn bị nhận hồ sơ">Chuẩn bị nhận hồ sơ</option>
            <option value="Hết hạn nộp hồ sơ">Hết hạn nộp hồ sơ</option>
        </select>
        </div>
    </div> --}}
  <button type="submit" class="btn btn-primary" id="submit">Lưu thông tin yêu cầu tuyển dụng</button>
</form>
<script>
      $('#submit').on('click', function(){
              var date = new Date($('#inputdate').val());
              var day = $('#inputdate').getDate();
              var month = $('#inputdate').getMonth() + 1;
              var year = $('#inputdate').getFullYear();
              var realdate = null;
              realdate = day +"/" + month +"/" + year;
              return realdate;
            });
</script>
{{/if}}